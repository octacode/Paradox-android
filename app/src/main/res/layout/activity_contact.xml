<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <com.gjiazhe.panoramaimageview.PanoramaImageView
            android:id="@+id/panorama_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/road"
            app:piv_enablePanoramaMode="true"
            app:piv_invertScrollDirection="false"
            app:piv_show_scrollbar="false" />

        <android.support.v7.widget.CardView
            android:layout_width="300sp"
            android:id="@+id/card"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="8sp"
            app:cardElevation="8sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/ps"
                    android:text="Contact us"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="16sp"
                    android:background="#efefef" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/ps"
                        android:text="Ankit Guleria"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/num_ankit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="+919736813939"
                        android:textColor="#00aeef"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/ps"
                        android:text="Kumar Shashwat"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/num_shasha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="+917018296471"
                        android:textColor="#00aeef"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="16sp"
                    android:background="#efefef" />

                <TextView
                    android:id="@+id/mail_to_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/psb"
                    android:gravity="center"
                    android:text="Write to us"
                    android:textSize="16sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:id="@+id/toolbar_about"
        app:navigationIcon="@drawable/back_black"
        android:layout_height="wrap_content"/>
</FrameLayout>